{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "target": "es6",
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "typings"],
  "exclude": ["**/*.test.ts", "node_modules", "src/__mocks__/**/*.ts"]
}
